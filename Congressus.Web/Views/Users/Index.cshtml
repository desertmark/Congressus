@model IEnumerable<Congressus.Web.Models.UserViewModel>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de usuarios</h2>

<p>
    @if (User.IsInRole("admin"))
    {
        <a class="btn-floating tooltipped btn-large waves-effect waves-light green"
           data-position="top"
           data-delay="50"
           data-tooltip="Crear nuevo usuario"
           href="@Url.Action("Create", "Users")">
            <i class='material-icons'>add</i>
        </a>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>Tipo de perfil</th>
        <th>Nombre de usuario</th>
        <th>Numero de telefono</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProfileType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
