@model Congressus.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar como Asistente";
}

<h2>Registrarse como asistente a un evento.</h2>


@{
    ViewBag.Title = "Regístrate y participá en las conferencias que podemos ofrecerte!";
}

<h3>@ViewBag.Title</h3>

@using (Html.BeginForm("RegisterAsistente", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h5>@Html.ActionLink("Quieres organizar tu propia conferencia?", "Register", "Account")</h5>
    <h5>@Html.ActionLink("Eres un Autor?", "RegisterAutor", "Account")</h5>
    <hr />
    @Html.ValidationSummary("", new { @class = "red-text" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrarse" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




