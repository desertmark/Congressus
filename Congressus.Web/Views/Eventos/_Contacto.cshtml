@model Congressus.Web.Models.Entities.Evento
<div id="Contacto">
    <h4 class="teal-text">Contacto</h4>
    <table class="striped detailsTable">
        <tr>
            <th class="black-text text-accent-4"><strong>Dirección:</strong></th>
            <td><span>@Html.DisplayFor(model => model.Direccion)</span></td>
        </tr>
        <tr>
            <th class="black-text text-accent-4"><strong>Lugar:</strong></th>
            <td><span>@Html.DisplayFor(model => model.Lugar)</span></td>
        </tr>
        <tr>
            <th class="black-text text-accent-4"><strong>Contactanos a:</strong></th>
            <td><span>@Html.DisplayFor(model => model.EmailContacto)</span></td>
        </tr>
    </table>
    <h5 class="teal-text">Mapa</h5>
    @{
        var q = string.IsNullOrEmpty(Model.Direccion) ? "Argentina" : Model.Direccion;
        var src = "https://www.google.com/maps/embed/v1/place?q=" + q + "&key=AIzaSyB5LWfPe62A2B8pU7hQNVAKDtcWiKse6c8";
    }
    <iframe src="@src"
            width="600"
            height="450"
            frameborder="0"
            style="border:0"
            allowfullscreen></iframe>
    <br />
</div>

 