@model Congressus.Web.Models.PaperViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm("Edit", "Papers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Paper</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div>
            @Html.LabelFor(model => model.Nombre)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre)
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.AreasCientifica)
            <div>
                @Html.DropDownListFor(model => model.AreaCientificaId, Model.AreasCientifica, new { @class = "browser-default" })
                @Html.ValidationMessageFor(model => model.AreaCientificaId)
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Fecha)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha)
                @Html.ValidationMessageFor(model => model.Fecha)
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.CoAutores)
            <div>
                <div class="chips" style="width:38%">                    
                    <input type="text" id="autores" />
                </div>
                @Html.HiddenFor(model => model.CoAutores, new { @class = "chipHidden" })
                @Html.ValidationMessageFor(model => model.CoAutores)
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Descripcion)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion)
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div>



        <div class="file-field input-field">
            <div class="btn">
                <span>Archivo</span>
                <input name="Archivo" type="file">
            </div>
            <div class="file-path-wrapper">
                <input name="path" class="file-path validate" type="text" placeholder="@Model.Path">
            </div>
        </div>
        <br />
        <br />

        <div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
