@model IEnumerable<Congressus.Web.Models.Entities.FormularioBeca>

@{
    ViewBag.Title = "Aplicantes a becas";
}

<h4 class="teal-text">Aplicantes a beca</h4>

<table class="stripped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domicilio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoPostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocalidadCompleta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PresentaTrabajo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreaCientificaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Domicilio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoPostal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocalidadCompleta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PresentaTrabajo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AreaCientifica.Descripcion)
        </td>        
        <td>
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
