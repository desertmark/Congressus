@model Congressus.Web.Models.Entities.Evento
@using Congressus.Web.Enumeraciones;
@{
    ViewBag.Title = "Aplicantes a becas";
}

@Html.Partial("_AdministrarEventoNav", Model)

<h4 class="teal-text">Aplicantes a beca</h4>

<table class="stripped">
    <tr>
        <th>
            Nombre completo
            @*@Html.DisplayNameFor(model => model.NombreCompleto)*@
        </th>
        <th>
            Teléfono
            @*@Html.DisplayNameFor(model => model.Telefono)*@
        </th>
        <th>
            Email
            @*@Html.DisplayNameFor(model => model.Email)*@
        </th>
        <th>
            Presenta Trabajo
            @*@Html.DisplayNameFor(model => model.PresentaTrabajo)*@
        </th>
        <th>
            Área Científica
            @*@Html.DisplayNameFor(model => model.AreaCientificaId)*@
        </th>
        <th>
            Categoría
            @*@Html.DisplayNameFor(model => model.CategoriaId)*@
        </th>
        <th></th>
    </tr>
@if (Model.Becas.Count() > 0)
{
    foreach (var item in Model.Becas)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @(item.PresentaTrabajo ? "Si" : "No")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaCientifica.Descripcion)
            </td>        
            <td>
                @*@Html.DisplayFor(modelItem => item.CategoriaId)*@
                @Html.EnumDisplayName(typeof(CategoriaBecaEnum),item.CategoriaId)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.Id })
            </td>
        </tr>
    }
}
</table>
